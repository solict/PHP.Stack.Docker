service_httpd22_proxy_args_app_httpd_vhost_group="${service_httpd22_proxy_args_app_httpd_global_group}"
service_httpd22_proxy_args_app_httpd_vhost_home="${service_httpd22_proxy_args_app_httpd_vhost_id}"
service_httpd22_proxy_command="/usr/bin/supervisord -c /etc/supervisor/supervisord.conf --nodaemon"

